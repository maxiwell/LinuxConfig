background yes
update_interval 1

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
text_buffer_size 2048

gap_x 80
gap_y 10
minimum_size 300 900
maximum_width 350
own_window yes
own_window_type override
own_window_transparent yes
own_window_argb_visual yes
#own_window_type normal
own_window_type override
own_window_class conky-semi
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
border_inner_margin 0
border_outer_margin 0
alignment tr


draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

override_utf8_locale yes
use_xft yes
xftfont caviar dreams:size=10
xftalpha 0.5
uppercase no

# Defining colors
default_color FFFFFF
# Shades of Gray
color1 DDDDDD
color2 AAAAAA
color3 888888
# Orange
color4 EF5A29
# Green
color5 77B753

# Loading lua script for drawning rings
lua_load ~/.conky/seamod_rings.lua
lua_draw_hook_post main

## System information using conky capabilities

# Header with base system info
TEXT
${font Ubuntu:size=10,weight:bold}${color4}SYSTEM ${hr 2}
${offset 15}${font Ubuntu:size=10,weight:normal}${color1}${pre_exec lsb_release -d | cut -f 2} - $sysname $kernel
${offset 15}${font Ubuntu:size=10,weight:normal}${color1}Battery:  ${color3}${battery_bar 5,150 BAT1} ${color3}${battery_percent BAT1}%
${offset 15}${font Ubuntu:size=10,weight:normal}${color1}Uptime: ${color3}$uptime

# Showing CPU Graph
${voffset 5}
${offset 130}${cpugraph cpu0 40,183 666666 666666 100}${voffset -25}
${offset 100}${font Ubuntu:size=10,weight:bold}${color5}CPU
# Showing TOP 5 CPU-consumers
${offset 115}${font Ubuntu:size=10,weight:normal}${color4}${top name 1}${alignr}${top cpu 1}%
${offset 115}${font Ubuntu:size=10,weight:normal}${color1}${top name 2}${alignr}${top cpu 2}%
${offset 115}${font Ubuntu:size=10,weight:normal}${color2}${top name 3}${alignr}${top cpu 3}%
${offset 115}${font Ubuntu:size=10,weight:normal}${color3}${top name 3}${alignr}${top cpu 4}%
${offset 115}${font Ubuntu:size=10,weight:normal}${color3}${top name 3}${alignr}${top cpu 5}%

#Showing memory part with TOP 5
${voffset 40}
${offset 100}${font Ubuntu:size=10,weight:bold}${color5}MEM
${offset 115}${font Ubuntu:size=10,weight:normal}${color4}${top_mem name 1}${alignr}${top_mem mem_res 1}
${offset 115}${font Ubuntu:size=10,weight:normal}${color1}${top_mem name 2}${alignr}${top_mem mem_res 2}
${offset 115}${font Ubuntu:size=10,weight:normal}${color2}${top_mem name 3}${alignr}${top_mem mem_res 3}
${offset 115}${font Ubuntu:size=10,weight:normal}${color3}${top_mem name 4}${alignr}${top_mem mem_res 4}
${offset 115}${font Ubuntu:size=10,weight:normal}${color3}${top_mem name 4}${alignr}${top_mem mem_res 5}

